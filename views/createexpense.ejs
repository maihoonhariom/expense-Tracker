<%- include("./partition/header") %>
<%- include("./partition/nav") %>


<div class="pt-24 h-5/6 w-full flex flex-col items-center justify-center bg-gray-50">
    <h1 class="text-4xl font-extrabold text-blue-600">Create Expense</h1>
    
    
    <form action="/expense/expense-save" method="post" class="mt-10 bg-white shadow-lg h-3/5 w-11/12 md:w-1/2 lg:w-1/3 flex flex-col gap-6 rounded-2xl p-6">
        
        
        <input type="text" class="p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="title" placeholder="Enter Title here" required>
        
        
        <input type="text" class="p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="amount" placeholder="Enter Amount here" required>
        
        
        <input type="text" class="p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="category" placeholder="Enter Category here" required>
        
        
        <input type="text" class="p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="remark" placeholder="Enter Remark here">
        
        
        <select name="paymentmode" class="p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" required>
            <option value="" disabled selected>Select an option</option>
            <option value="cash">Cash</option>
            <option value="upi">UPI</option>
            <option value="card">Card</option>
        </select>
        
        
        <button type="submit" class="bg-blue-500 text-white w-1/2 p-4 rounded-full self-center hover:bg-blue-600 transition duration-300">
            Save Expense
        </button>
    </form>
</div>

<%- include("./partition/footer") %>
