<%- include("./partition/header") %>
<%- include("./partition/usernav") %>


<div class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-center mb-6">User Profile</h2>
        
        <!-- Profile Image -->
        <div class="flex justify-center mb-4">
            <img class="w-24 h-24 rounded-full border border-gray-300 shadow-sm" 
                 src="<%= user.profile %>" 
                 alt="<%= user.username %>'s profile picture">
        </div>

        <!-- User Info -->
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Username:</label>
                <p class="text-gray-600"><%= user.username %></p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Email:</label>
                <p class="text-gray-600"><%= user.email %></p>
            </div>
        </div>

        <!-- Edit Profile Button -->
        <div class="mt-6 text-center">
            <a href="/user/edit-profile" class="text-indigo-600 hover:underline">
                Edit Profile
            </a>
        </div>
    </div>
</div>

<%- include("./partition/footer") %>
