<%- include("./partition/header") %>
<%- include("./partition/nav") %>


<a href="/expense/expense-show" class="bg-blue-400 text-white text-3xl rounded-full absolute left-5 top-24 p-2 hover:bg-blue-500 transition duration-300">
    <i class="ri-arrow-left-fill"></i>
</a>


<div class="shadow-2xl h-screen flex flex-col justify-center items-center gap-4 bg-gray-50">
    
   
    <h1 class="font-extrabold text-4xl bg-gradient-to-r from-red-300 to-red-500 w-2/3 text-center p-4 rounded-lg shadow-md">Expense Detail</h1>
    
    
    <div class="bg-white shadow-lg w-2/3 md:w-1/2 lg:w-1/3 flex flex-col justify-around p-6 rounded-lg">
        
      
        <div class="flex flex-col gap-6">
            <div class="bg-blue-100 flex p-4 justify-between rounded-lg shadow-sm">
                <strong class="text-lg">Title:</strong>
                <h2 class="font-medium"><%= expense.title %></h2>
            </div>

            <div class="bg-blue-100 flex p-4 justify-between rounded-lg shadow-sm">
                <strong class="text-lg">Amount:</strong>
                <h2 class="font-medium"><%= expense.amount %></h2>
            </div>

            <div class="bg-blue-100 flex p-4 justify-between rounded-lg shadow-sm">
                <strong class="text-lg">Category:</strong>
                <h2 class="font-medium"><%= expense.category %></h2>
            </div>

            <div class="bg-blue-100 flex p-4 justify-between rounded-lg shadow-sm">
                <strong class="text-lg">Remark:</strong>
                <h2 class="font-medium"><%= expense.remark %></h2>
            </div>

            <div class="bg-blue-100 flex p-4 justify-between rounded-lg shadow-sm">
                <strong class="text-lg">Payment Mode:</strong>
                <h2 class="font-medium"><%= expense.paymentmode %></h2>
            </div>
        </div>

       
        <div class="flex justify-center gap-6 mt-6">
            <a class="bg-red-400 text-white font-bold py-2 px-4 rounded-lg hover:bg-red-500 transition duration-300" href="/expense/delete/<%= expense.id %>">Delete Expense</a>
            <a class="bg-blue-400 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-500 transition duration-300" href="/expense/update/<%= expense.id %>">Edit Expense</a>
        </div>
    </div>
</div>

<%- include("./partition/footer") %>
