<%- include("./partition/header") %>
<%- include("./partition/nav") %>

<!-- Back Button -->
<a href="/expense/details/<%= detail._id%>" class="bg-blue-400 text-white text-3xl rounded-full absolute left-5 top-20 p-2 hover:bg-blue-500 transition duration-300">
    <i class="ri-arrow-left-fill"></i>
</a>

<!-- Main Container -->
<div class="pt-2 h-5/6 w-full flex flex-col items-center justify-center bg-gray-50">
    <h1 class="text-4xl font-extrabold text-blue-600">Edit Expense</h1>

    <!-- Edit Form -->
    <form action="/expense/update/<%= detail._id%>" method="post" class="mt-10 bg-white shadow-lg h-3/5 w-11/12 md:w-1/2 lg:w-1/3 flex flex-col gap-6 rounded-2xl p-6">
        
        <!-- Title (Disabled) -->
        <input disabled type="text" class="bg-gray-100 p-4 rounded-full border-2 border-gray-300" name="title" placeholder="Enter Title" value="<%= detail.title %>">
        
        <!-- Amount -->
        <input type="text" class="bg-white p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="amount" placeholder="Enter Amount" value="<%= detail.amount %>">
        
        <!-- Category -->
        <input type="text" class="bg-white p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="category" placeholder="Enter Category" value="<%= detail.category %>">
        
        <!-- Remark -->
        <input type="text" class="bg-white p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500" name="remark" placeholder="Enter Remark" value="<%= detail.remark %>">
        
        <!-- Payment Mode Dropdown -->
        <select name="paymentmode" class="bg-white p-4 rounded-full border-2 border-gray-300 focus:outline-none focus:border-blue-500">
            <option value="cash" <%= detail.paymentmode === 'cash' ? 'selected' : '' %>>Cash</option>
            <option value="upi" <%= detail.paymentmode === 'upi' ? 'selected' : '' %>>UPI</option>
            <option value="card" <%= detail.paymentmode === 'card' ? 'selected' : '' %>>Card</option>
        </select>

        <!-- Update Button -->
        <button type="submit" class="bg-blue-500 text-white w-1/2 p-4 rounded-full self-center hover:bg-blue-600 transition duration-300">
            Update Expense
        </button>
    </form>
</div>

<%- include("./partition/footer") %>
